<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg">

        <com.github.Humilton.view.EaseTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleBarRightImage="@mipmap/right_menu_white"/>

        <com.github.Humilton.view.HorizonClickView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftTxt="@string/default_value" />

        <com.github.Humilton.view.HorizonClickView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftMargin="5dp"
            app:leftImage="@mipmap/alert"
            app:leftTxt="@string/type"
            app:rightImageInvisible="true"
            app:rightTxt="@string/values" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:background="@android:color/holo_green_light"
            android:layout_height="45dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.github.Humilton.view.CharImageView
                android:id="@+id/char_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:minHeight="40dp"
                />

            <com.github.Humilton.view.CharImageView
                android:id="@+id/char_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:minHeight="40dp"
                />

            <com.github.Humilton.view.CharImageView
                android:id="@+id/char_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:minHeight="40dp"
                />

            <com.github.Humilton.view.CharImageView
                android:id="@+id/char_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:minHeight="40dp"
                />

            <com.github.Humilton.view.CharImageView
                android:id="@+id/char_img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:minHeight="40dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/case_view_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@mipmap/chulian" />

        <LinearLayout
            android:id="@+id/img_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_below="@+id/time">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_admin"/>

            <com.github.Humilton.view.MessageImageView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/img_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>
</layout>